@model MovieApp.Models.UserModel

@{
    ViewBag.Title = "Movies | Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bodycontent">
    <h2>Create User</h2>
    <hr />
    @using (Html.BeginForm()) {
        @Html.HiddenFor(u => u.UserId)
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Name, new { @for = "name" })
                @Html.TextBoxFor(u => u.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Name)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Email, new { @for = "email" })
                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Email)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Password, new { @for = "password" })
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.ConfirmPassword, new { @for = "confirmPassword" })
                @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.ConfirmPassword)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Address, new { @for = "address" })
                @Html.TextBoxFor(u => u.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Address)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    }
</div>
