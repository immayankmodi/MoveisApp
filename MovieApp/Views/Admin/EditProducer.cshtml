@model MovieApp.Models.ProducerModel

@{
    ViewBag.Title = "Movies | Edit Producer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bodycontent">
    <h2>Edit Producer</h2>
    <hr />
    @using (Html.BeginForm()) {
        @Html.HiddenFor(u => u.ProducerID)
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.FirstName, new { @for = "FirstName" })
                @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.FirstName)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.LastName, new { @for = "LastName" })
                @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.LastName)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.DateOfBirth, new { @for = "DateOfBirth" })
                <div>
                    @{
                        string dateOfBirth = "";
                        if (Model.DateOfBirth.HasValue) {
                            dateOfBirth = Model.DateOfBirth.Value.ToString("MM.dd.yyyy", System.Globalization.CultureInfo.InvariantCulture);
                        }
                        @Html.TextBoxFor(m => m.DateOfBirth, new { Value = dateOfBirth, @type = "date", @class = "form-control" })
                    }
                </div>
                @Html.ValidationMessageFor(u => u.DateOfBirth)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.NumberOfMovies, new { @for = "NumberOfMovies" })
                @Html.TextBoxFor(u => u.NumberOfMovies, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.NumberOfMovies)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
                        }
</div>
