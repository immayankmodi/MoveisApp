@model MovieApp.Models.AdminModel

@{
    ViewBag.Title = "Movies | Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bodycontent">
    <h2>Login</h2>
    <hr />
    @using (Html.BeginForm()) {
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Email, new { @for = "email" })
                @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @id = "email" })
                @Html.ValidationMessageFor(u => u.Email)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Password, new { @for = "password" })
                @Html.PasswordFor(u => u.Password, new { @class = "form-control", @id = "password" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </div>
    }
</div>
