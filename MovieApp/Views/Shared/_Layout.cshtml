<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">Movies Management</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav" style="float:right">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.Identity.Name.ToString().ToLower().Equals("admin"))
                        {
                            <li>@Html.ActionLink("Users", "UserList", "Admin")</li>
                            <li>@Html.ActionLink("Movies", "MovieList", "Admin")</li>
                            <li>@Html.ActionLink("Producers", "ProducerList", "Admin")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Movies", "MovieList", "USer")</li>
                        }
                        <li>@Html.ActionLink("Log Out", "Logout", "User")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("User Log In", "Login", "User")</li>
                        <li>@Html.ActionLink("Admin Log In", "Login", "Admin")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">

        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)

    </div>
</body>
</html>
